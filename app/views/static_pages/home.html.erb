<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info'%>
		</section>
		<section>
        <%= render 'shared/stats' %>
      </section>
		<section>
			<%= render 'shared/micropost_form'%>
		</section>
	</aside>
	<div class="span8">
		<h3>Microtext Feed</h3>
		<%= render 'shared/feed'%> 
		</div>
</div>
<%else%>

<div class="center hero-unit">
<h1>Welcome to the MicroText</h1>
<p>Welcome to <a href="http://microtext.herokuapp.com">MicroText</a></p>

<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary "%>

<%= link_to "Sign in", signin_path , class: "btn btn-large btn"%>
</div>

<%end%>